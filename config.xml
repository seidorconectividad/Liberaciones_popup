<?xml version='1.0' encoding='utf-8'?>
<widget id="seidor.prodac.liberaciones" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LiberacionesApp</name>
    <description>Aplicacion para la gestion de liberaciones</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">SEIDOR / Franz Portocarrero</author>
    <content src="Menu/webapp/index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon.png" />
        <icon density="mdpi" src="res/icon.png" />
        <icon density="hdpi" src="res/icon.png" />
        <icon density="xhdpi" src="res/icon.png" />
        <splash density="land-hdpi" src="res/ssv.png" />
        <splash density="land-ldpi" src="res/ssv.png" />
        <splash density="land-mdpi" src="res/ssv.png" />
        <splash density="land-xhdpi" src="res/ssv.png" />
        <splash density="port-hdpi" src="res/ssh.png" />
        <splash density="port-ldpi" src="res/ssh.png" />
        <splash density="port-mdpi" src="res/ssh.png" />
        <splash density="port-xhdpi" src="res/ssh.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-badge" spec="^0.8.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="git+https://github.com/katzer/cordova-plugin-local-notifications.git" />
</widget>
